generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  username  String    @unique
  password  String
  avatar    String?
  createdAt DateTime  @default(now())
  Product   Product[]
}

model Product {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  desc        String
  instruction String
  food        Food?
  type        Type?
  user        User?     @relation(fields: [userId], references: [id])
  Category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String    @db.ObjectId
  userId      String    @db.ObjectId
  createdAt   DateTime  @default(now())
}

model Category {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  type     Type
  products Product[]
}

enum Type {
  breakfast
  lunch
  snack
  dinner
  dessert
  appetizer
  beverage
}

enum Food {
  veg
  nonveg
}
